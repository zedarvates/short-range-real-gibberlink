<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".PermissionAuthorizationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:id="@+id/headerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ›¡ï¸ Session Authorization"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Peer Identity -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Peer Identity"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/peerFingerprint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GL-AB12-CDEF"
                    android:textSize="18sp"
                    android:textColor="@color/material_dynamic_primary50"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Location Info -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connection Status"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="IR Laser:"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/irStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ… OK"
                        android:textSize="14sp"
                        android:textColor="@android:color/holo_green_dark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ultrasonic:"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ultrasoundStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ… OK"
                        android:textSize="14sp"
                        android:textColor="@android:color/holo_green_dark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Estimated distance:"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/distanceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="75m"
                        android:textSize="14sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Angle:"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/angleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12Â°"
                        android:textSize="14sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Security Warnings -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/warningCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@android:color/holo_orange_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸ Security Warning"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/warningText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Weak PIN detected in previous attempts"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Permission Checkboxes -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Permissions to Grant"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="12dp" />

                <!-- Discussions -->
                <CheckBox
                    android:id="@+id/permissionDiscussions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¬ Discussions\nAuthorize message exchange (non-executable)"
                    android:textSize="14sp"
                    android:checked="true"
                    android:layout_marginBottom="8dp" />

                <!-- Access Authorizations -->
                <CheckBox
                    android:id="@+id/permissionAccessAuth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ” Access Authorizations\nPermit ticket and identity issuance"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <!-- Commands -->
                <CheckBox
                    android:id="@+id/permissionCommands"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš¡ Commands\nAllow execution of orders and controls"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <!-- Couplings -->
                <CheckBox
                    android:id="@+id/permissionCouplings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”— Couplings\nEnable persistent device pairing"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <!-- Others -->
                <CheckBox
                    android:id="@+id/permissionOthers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”§ Others\nModule-specific authorizations (sync, diagnostics)"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Time Options -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Session Duration"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/durationGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/duration30s"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30 seconds"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <RadioButton
                        android:id="@+id/duration5min"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5 minutes"
                        android:textSize="14sp"
                        android:checked="true"
                        android:layout_marginBottom="4dp" />

                    <RadioButton
                        android:id="@+id/duration30min"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30 minutes"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <RadioButton
                        android:id="@+id/durationSession"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Single session (post-usage expiration)"
                        android:textSize="14sp" />
                </RadioGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Scope Options -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Permission Scope"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/scopeGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/scopeThisNode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This node only"
                        android:textSize="14sp"
                        android:checked="true"
                        android:layout_marginBottom="4dp" />

                    <RadioButton
                        android:id="@+id/scopeThisGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This group"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <RadioButton
                        android:id="@+id/scopeAllVisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="All visible nodes"
                        android:textSize="14sp" />
                </RadioGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- PIN Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Enter Authorization PIN"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pinInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:text="9999"
                android:textSize="18sp"
                android:gravity="center" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Biometric Authentication Notice (if available) -->
        <TextView
            android:id="@+id/biometricNotice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”’ Biometric authentication available for sensitive permissions"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnDeny"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Deny"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_red_dark"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnAuthorize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Authorize"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_green_dark"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Lockout Warning -->
        <TextView
            android:id="@+id/lockoutWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ” Incorrect PIN attempts: 2/3\nNext failure will lock authorization"
            android:textSize="12sp"
            android:textColor="@android:color/holo_red_dark"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>
